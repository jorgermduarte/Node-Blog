<%- contentFor('content') %>

<% data.forEach( post => { %>

    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">
    
          <!-- Title -->
          <h1 class="mt-4"><%-post.title %></h1>
    
          <!-- Author -->
          <p class="lead">
            by
            <a href="#"><%-post._user %></a>
          </p>
    
          <hr>
    
          <!-- Date/Time -->
          <p>Posted on <%-post.date_create %></p>
    
          <hr>
    
          <!-- Preview Image -->
          <img class="img-fluid rounded" src="<%-post.image %>" alt="">
    
          <hr>
    
          <!-- Post Content -->
          <div id="post-content">
            <%=post.content %>
          </div>
    
          <hr>
    
          <a href="/post/<%-post._id%>">Ver Detalhes do Post</a>

        </div>
    
    
    </div>

<% }); %>